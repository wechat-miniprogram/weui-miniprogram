@import '../common.wxss';

icon{
    margin-right: 13px;
}

.weui-grid {
    text-align: center;
    padding: 36px 10px;
}

.page__bd {
    padding-left: 15px;
    padding-right: 15px;
    text-align: left;
}
.icon-box{
    margin-bottom: 25px;
}
.icon-box__ctn{
    flex-shrink: 100;
}
.icon-item_box {
    display: inline-block;
    width: 25%;
    padding: 3px;
    height: 80px;
    line-height: 30px;
    text-align: center;
    box-sizing: border-box;
}
.icon-name {
    font-size: 24rpx;
    overflow: hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.icon-box__title{
    font-size: 18px;
    margin: 5px 0;
}
.weui-grids__before {
    position: absolute;
    left: 0;
    top: 0;
    color: hsla(0,0%,100%,.1);
    right: 0;
    height: 1px;
    border-top: 1px solid hsla(0,0%,100%,.1);
    transform-origin: 0 0;
    transform: scaleY(.5);
}
.weui-grids__after {
    position: absolute;
    left: 0;
    top: 0;
    color: hsla(0,0%,100%,.1);
    width: 1px;
    bottom: 0;
    border-left: 1px solid hsla(0,0%,100%,.1);
    transform-origin: 0 0;
    transform: scaleX(.5);
}
.weui-grid__before {
    position: absolute;
    right: 0;
    bottom: 0;
    color: hsla(0,0%,100%,.1);
    top: 0;
    width: 1px;
    border-right: 1px solid hsla(0,0%,100%,.1);
    transform-origin: 100% 0;
    transform: scaleX(.5);
}
.weui-grid__after {
    position: absolute;
    right: 0;
    bottom: 0;
    color: hsla(0,0%,100%,.1);
    left: 0;
    height: 1px;
    border-bottom: 1px solid hsla(0,0%,100%,.1);
    transform-origin: 0 100%;
    transform: scaleY(.5);
}