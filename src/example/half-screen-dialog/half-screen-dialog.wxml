    <button slot="footer" type="primary" class="weui-btn">按钮B</button>
    <view class="weui-half-screen-dialog__attachment-area">
      <navigator class="weui-link" url="">附加操作</navigator>
    </view>
  </view>
</mp-halfScreenDialog>
