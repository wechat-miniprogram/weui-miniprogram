/* weui 用了标签写法，skyline 下部分声明不生效，所以重新声明一次 */
/* root-portal-content 匹配不到 page 的声明，所以再声明一次 */
page,
root-portal-content {
    --weui-BG-0: #ededed;
    --weui-BG-1: #f7f7f7;
    --weui-BG-2: #fff;
    --weui-BG-3: #f7f7f7;
    --weui-BG-4: #4c4c4c;
    --weui-BG-5: #fff;
    --weui-FG-0: rgba(0, 0, 0, 0.9);
    --weui-FG-HALF: rgba(0, 0, 0, 0.9);
    --weui-FG-1: rgba(0, 0, 0, 0.5);
    --weui-FG-2: rgba(0, 0, 0, 0.3);
    --weui-FG-3: rgba(0, 0, 0, 0.1);
    --weui-FG-4: rgba(0, 0, 0, 0.15);
    --weui-FG-5: rgba(0, 0, 0, 0.05);
    --weui-RED: #fa5151;
    --weui-ORANGE: #fa9d3b;
    --weui-YELLOW: #ffc300;
    --weui-GREEN: #91d300;
    --weui-LIGHTGREEN: #95ec69;
    --weui-BRAND: #07c160;
    --weui-BLUE: #10aeff;
    --weui-INDIGO: #1485ee;
    --weui-PURPLE: #6467f0;
    --weui-WHITE: #fff;
    --weui-LINK: #576b95;
    --weui-TEXTGREEN: #06ae56;
    --weui-FG: #000;
    --weui-BG: #fff;
    --weui-TAG-TEXT-ORANGE: #fa9d3b;
    --weui-TAG-BACKGROUND-ORANGE: rgba(250, 157, 59, 0.1);
    --weui-TAG-TEXT-GREEN: #06ae56;
    --weui-TAG-BACKGROUND-GREEN: rgba(6, 174, 86, 0.1);
    --weui-TAG-TEXT-BLUE: #10aeff;
    --weui-TAG-BACKGROUND-BLUE: rgba(16, 174, 255, 0.1);
    --weui-TAG-TEXT-BLACK: rgba(0, 0, 0, 0.5);
    --weui-TAG-BACKGROUND-BLACK: rgba(0, 0, 0, 0.05);
    --weui-DIALOG-LINE-COLOR: rgba(0, 0, 0, 0.1);
    --weui-BTN-DEFAULT-COLOR: #06ae56;
    --weui-BTN-DEFAULT-BG: #f2f2f2;
    --weui-cellMarginLR: 16px;
    --weui-cellPaddingLR: 16px;
}

root-portal-content {
    position: absolute;
}

/* skyline 兼容写法，一些+选择器支持 */
.mrt16 {
    margin-top: 16px;
}
.page-height {
    height: calc(100vh - 44px - env(safe-area-inset-top));
}

/* weui-flex */
.weui-flex {
    flex-direction: row;
}
.weui-flex__item {
    flex: 1 1 auto;
}

/* 表单 */

/* weui-cell */
.weui-cell {
    flex-direction: row;
}
.weui-cell_access .weui-cell__ft::after {
    /* 不支持 currentColor */
    background-color: var(--weui-FG-2);
}
.weui-cell::before {
    /* border-top: 1px solid var(--weui-FG-3); */
    border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.weui-hover-active {
    background-color: var(--weui-FG-3);
}

/* weui-navigation-bar */
.weui-navigation-bar {
    flex: none;
}
.weui-navigation-bar__inner {
    height: calc(44px + env(safe-area-inset-top));
    padding-top: env(safe-area-inset-top);
    box-sizing: border-box;
    flex-direction: row;
    position: relative;
}
.weui-navigation-bar__inner .weui-navigation-bar__center {
    flex: 1 1 auto;
    /* skyline 不支持 inline-flex，所以在父元素 flex-direction: row; 来支持 */
    flex-direction: row;
}
.weui-navigation-bar__inner .weui-navigation-bar__left .weui-navigation-bar__btn_goback {
    width: 1rem;
    height: 1rem;
    background-color: var(--weui-FG-0);
}

/* weui-slideview */
.weui-slideview {
    flex-direction: row;
}
.weui-slideview__btn {
    flex: 1 1 auto;
    width: 100%;
    min-width: 0;
}
.weui-slideview_icon .weui-slideview__btn {
    flex: none;
    width: 48px;
    height: 48px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
}
.weui-slideview_icon .weui-slideview__btn wx-image {
    align-self: center;
}
.weui-slideview__btn__icon {
    margin: auto;
}
.weui-slideview__btn__wrp {
    justify-content: center;
}
.weui-slideview__right {
    width: 200px;
}

/* weui-form */
.weui-label {
    display: flex;
}
.weui-cells__group_form .weui-cell {
    /* padding: var(--weui-cellPaddingLR); */
    padding: 16px;
}
.weui-cells__group_form .weui-cells {
    margin-left: 16px;
    margin-right: 16px;
}
