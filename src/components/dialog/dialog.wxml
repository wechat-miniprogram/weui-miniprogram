<view
  wx:if="{{wrapperShow}}"
  aria-role="dialog"
  aria-modal="true"
  class="{{innerShow ? 'fadeIn' : 'fadeOut'}}"
>
  <view
    wx:if="{{mask}}"
    bindtap="close"
    class="weui-mask"
    aria-role="button"
    aria-label="关闭"
  ></view>
  <view bindtap="close" class="weui-dialog__wrp {{extClass}}">
    <view class="weui-dialog" catchtap="stopEvent">
      <view class="weui-dialog__hd">
        <view class="weui-dialog__title" tabindex="0">{{title}}
          <slot name="title"></slot>
        </view>
      </view>
      <view class="weui-dialog__bd">
        <slot></slot>
      </view>
      <view class="weui-dialog__ft">
        <block wx:if="{{buttons && buttons.length}}">
          <view
            wx:for="{{buttons}}"
            wx:key="index"
            class="weui-dialog__btn {{item.className}} {{item.extClass}}"
            hover-class="weui-active"
            data-index="{{index}}"
            bindtap="buttonTap"
            aria-role="button"
          >{{item.text}}</view>
        </block>
        <slot name="footer" wx:else></slot>
      </view>
    </view>
  </view>
</view>
